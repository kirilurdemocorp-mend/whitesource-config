{
  "scanSettings": {
    "configMode": "AUTO",
    "configExternalURL": "",
    "enableReachability": true,
    "exploitability": true,
    "enableIac": true,
    "baseBranches": []
  },
  "scanSettingsSAST": {
    "enableScan": true,
    "enableRemediation": true,
    "scanPullRequests": true,
    "incrementalScan": true,
    "baseBranches": [],
    "snippetSize": 10
  },
  "checkRunSettings": {
    "vulnerableCheckRunConclusionLevel": "failure",
    "displayMode": "diff",
    "useMendCheckNames": true,
    "strictMode": "failure"
  },
  "checkRunSettingsSAST": {
    "checkRunConclusionLevel": "failure",
    "severityThreshold": "low"
  },
  "issueSettings": {
    "minSeverityLevel": "LOW",
    "issueType": "DEPENDENCY"
  },
  "issueSettingsSAST": {
    "minSeverityLevel": "high",
    "issueType": "repo"
  },
  "remediateSettings": {
    "workflowRules": {
      "enabled": false
    },
    "extends": [
      "config:recommended",
      "github>kirilurdemocorp-mend/whitesource-config:smart-merge"
    ],
    "renovateConfig": {
      "$schema": "https://docs.renovatebot.com/renovate-schema.json",
      "extends": [
        "config:recommended",
        "mergeConfidence:all-badges"
      ]
    },
    "enableRenovate": true
  }
}
