{
  "scanSettings": {
    "configMode": "AUTO",
    "enableLicenseViolations": true,
    "baseBranches": [],
    "excludedPaths": ["node_modules", "dist", "target", "vendor", ".git"],
    "resolveDependencies": true
  },
  "checkRunSettings": {
    "vulnerableCheckRunConclusionLevel": "failure",
    "displayMode": "diff",
    "useMendCheckNames": true
  },
  "issueSettings": {
    "minSeverityLevel": "LOW",
    "issueType": "DEPENDENCY"
  },
  "remediateSettings": {
    "workflowRules": {
      "enabled": true
    },
    "enableRenovate": true,
    "extends": [
      "config:recommended",
      "mergeConfidence:all-badges"
    ],
    "packageRules": [
      {
        "matchPackagePatterns": ["*"],
        "groupName": "all dependencies",
        "groupSlug": "all-deps"
      },
      {
        "matchDepTypes": ["devDependencies"],
        "automerge": true
      }
    ],
    "prConcurrentLimit": 30,
    "prHourlyLimit": 30
  }
}
