{
  "scanSettings": {
    "configMode": "AUTO",
    "enableLicenseViolations": true,
    "baseBranches": []
  },
  "checkRunSettings": {
    "vulnerableCheckRunConclusionLevel": "failure",
    "displayMode": "diff",
    "useMendCheckNames": true
  },
  "issueSettings": {
    "minSeverityLevel": "LOW",
    "issueType": "DEPENDENCY"
  },
  "remediateSettings": {
    // Mend Remediate workflow for opening security fix PRs
    "workflowRules": {
      "enabled": true
    },

    // Enable Renovate globally
    "enableRenovate": true,

    // Global Renovate configuration
    "renovateConfig": {
      "extends": ["config:base"],
      "dependencyDashboard": true,
      "rangeStrategy": "replace",
      "schedule": ["after 9am on monday"],

      "packageRules": [
        {
          "matchPackagePatterns": ["*"],
          "groupName": "all dependencies",
          "groupSlug": "all-deps"
        },
        {
          "matchDepTypes": ["devDependencies"],
          "automerge": true
        }
      ],

      "prConcurrentLimit": 5,
      "prHourlyLimit": 2
    }
  }
}
